[flake8]
max-line-length = 127
exclude = 
    .git,
    __pycache__,
    */migrations/*,
    */venv/*,
    venv/*,
    */env/*,
    .venv,
    venv,
    env,
    migrations,
    scripts,
    api/tests,
    tests
    build,
    dist,
    *.pyc,
    .env,
    **/site-packages/*
ignore = 
    E203,
    E501, 
    W503, 
    W504,  
    F401,
    C901,
    E402,
max-complexity = 15
per-file-ignores =
    __init__.py:F401
    */migrations/*.py:E501,W503